/* pages/recommendSong/recommendSong.wxss */
.header image{
    width: 100%;
    height: 300rpx;
}
.data{
    
    width: 200rpx;
    height: 100rpx;
    position: absolute;
    left: 50%;
    transform: translate(-88rpx,-190rpx);
    line-height: 100rpx;
    text-align: center;
    font-size: 45rpx;
    font-family: 'STXingkai';
}


/* 列表区与 */
.listContainer{
    padding: 0 20rpx;
    border-radius: 30rpx;
    position: relative;
    top:-20rpx;
    background-color: #fff;
}
.listHeader{
    height:80rpx;
    line-height: 80rpx;
}
.changeMore{
    float: right;
}


/* 内容区 */
.listScroll{
    margin-left: 10rpx;
    height:calc(100vh - 380rpx);
}
.scrollItem{
    position: relative;
    display: flex;
    margin-bottom: 20rpx;
}
.scrollItem image{
    width: 80rpx;
    height: 80rpx;
    border-radius: 8rpx;
}
.musicInfo{
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    margin-left: 20rpx;
    
}
.musicInfo text{
    font-size: 24rpx;
    max-width: 500rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.scrollItem .iconfont{
   position: absolute;
   right: 0rpx;
   height: 80rpx;
   width: 80rpx;
   line-height: 80rpx;
}
